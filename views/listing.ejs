<!doctype html>
<html lang="en">
  <head>
    <title>openclassroom activity - nodejs</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
  </head>
  <body>

    <nav class="navbar navbar-light bg-light justify-content-between">
      <form class="form-inline" id="frmTodoForm" method="POST">
        <input class="form-control mr-sm-2" type="text" name="frmTodoMsg" id="frmTodoMsg" placeholder="Next task ?" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">add new</button>
      </form>
      <a class="navbar-brand">Real time todo list</a>
    </nav>

    <div class="container" style="margin: 25px auto;">
      <ul class="todoList list-group">
        <% todolist.forEach(function(todo, index) { %>
          <li data-id="<%= todo.id %>" class="list-group-item">
            <button style="float: right;" type="button" class="btn btn-danger todoRemove">✘</button>
            <div class="message">
              <%= todo.message %>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>


    <template id="todo-template">
      <li data-id="null" class="list-group-item">
        <button style="float: right;" type="button" class="btn btn-danger todoRemove">✘</button>
        <div class="message">{message}</div>
      </li>
    </template>

    <script src="/jquery/dist/jquery.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/assets/js/todo-list.js"></script>

  </body>
</html>